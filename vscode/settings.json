{
    "atomKeymap.promptV3Features": true,
    "editor.fontSize": 13,
    "editor.renderWhitespace": "all",
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "window.zoomLevel": 0,
    "editor.fontFamily": "'Fira Code', 'Hasklig', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.rulers": [ 100, 120 ],
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    // "css.validate": false,
    // "scss.validate": false,
    "javascript.validate.enable": false,
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "files.associations": {
        "*.jsx": "javascriptreact",
        "*.tsx": "typescriptreact",
        "*rc": "shellscript",
        "zshrc_default": "shellscript"
    },
    "gitlens.advanced.fileHistoryFollowsRenames": true,
    "files.defaultLanguage": "markdown",
    "diffEditor.ignoreTrimWhitespace": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,
    "javascript.preferences.quoteStyle": "single",
    "typescript.preferences.quoteStyle": "single",
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "workbench.colorTheme": "Night Owl",
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "gitlens.views.repositories.location": "scm",
    "gitlens.views.fileHistory.location": "explorer",
    "gitlens.views.lineHistory.location": "explorer",
    "gitlens.views.compare.location": "gitlens",
    "gitlens.views.search.location": "gitlens",
    "workbench.iconTheme": "material-icon-theme",
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "git.autofetch": true,
    "editor.renderControlCharacters": true,
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "vsicons.dontShowNewVersionMessage": true,
    "gitlens.gitCommands.closeOnFocusOut": true,
    "workbench.sideBar.location": "right",
    "editor.minimap.enabled": false,
    "workbench.activityBar.visible": true,
    "workbench.startupEditor": "newUntitledFile",
    // to be able to use a / shift + a for new file / new folder editor.editor.gotoLocation.multipleImplementations
    "workbench.list.automaticKeyboardNavigation": false,
    "jest.runAllTestsFirst": false,
    "jest.showCoverageOnLoad": true,
    "jest.autoEnable": false
}
