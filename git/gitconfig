[init]
  defaultBranch = main

[core]
  # Use custom `.gitignore` and `.gitattributes`
  excludesfile = ~/.gitignore
  hideDotFiles = false
  whitespace = space-before-tab,trailing-space

  # Make `git rebase` safer on macOS, more info: <http://www.git-tower.com/blog/make-git-rebase-safe-on-osx/>
  trustctime = false
  editor = vim

  untrackedCache = true

[alias]
  co = checkout
  cob = checkout -b
  s = status -sb
  st = status
  sts = status -sb
  lp = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lm = log --pretty=format:'* %s (%h)'
  grepl = grep --break --heading --line-number
  amend = commit --amend
  amendr = commit --amend --reuse-message=HEAD
  
  last = log -1 HEAD
  visual = !gitk
  p = push
  pl = pull --ff-only
  f = fetch
  deletebf = branch -D
  ours = checkout --ours
  b = branch
  ba = branch -a

  # undo
  unstage = reset HEAD --
  uncommit = reset --soft HEAD^
  undo = reset HEAD~1 --mixed

  # Show changes that will be pushed
  outgoing = !git fetch && git log @{u}..
    
  # Show changes that will be pulled
  incoming = !git fetch && git log ..@{u}

  # List aliases
  aliases = !git config --get-regexp '^alias\\.' | sed 's/alias\\.\\([^ ]*\\) \\(.*\\)/\\1\\\t => \\2/' | sort

