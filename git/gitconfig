[github]
  user = rheaditi

[init]
  defaultBranch = main

[core]
  # Use custom `.gitignore` and `.gitattributes`
  excludesfile = ~/.gitignore
  hideDotFiles = false
  whitespace = space-before-tab,trailing-space

  # Make `git rebase` safer on macOS, more info: <http://www.git-tower.com/blog/make-git-rebase-safe-on-osx/>
  trustctime = false
  editor = vim

[alias]
  co = checkout
  cob = checkout -b
  s = status -sb
  st = status
  sts = status -sb
  lp = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lm = log --pretty=format:'* %s (%h)'
  grepl = grep --break --heading --line-number
  amend = commit --amend
  amendr = commit --amend --reuse-message=HEAD
  unstage = reset HEAD --
  uncommit = reset --soft HEAD^
  last = log -1 HEAD
  visual = !gitk
  p = push
  pl = pull --ff-only
  f = fetch
  deletebf = branch -D
  ours = checkout --ours
  b = branch
  ba = branch -a

[color]
  # Use colors in Git commands that are capable of colored output when outputting to the terminal. (This is the default setting in Git â‰¥ 1.8.4.)
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[grep]
  lineNumber = true

[help]
  autocorrect = 5

[push]
  default = current

[pager]
  branch = false
  stash = false

[commit]
  gpgsign = false

[pull]
  ff = only

